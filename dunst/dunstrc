    alignment = left
    vertical_alignment = center 

    format = %s\n%b

    progress_bar = false
    progress_bar_height = 80
    progress_bar_frame_width = 2
    progress_bar_min_width = 300
    progress_bar_max_width = 300
    progress_bar_corner_radius = 0
    indicate_hidden = yes

    line_height = 100
    word_wrap = no
    stack_duplicates = false
    show_indicators = yes
    enable_recursive_icon_lookup = true

    icon_theme = "breeze-dark, Papirus-Dark"
    icon_position = left
    min_icon_size = 32
    max_icon_size = 128
    icon_corner_radius = 5


    # history_lenght = 20
    separator_height = 10
    padding = 5
    horizontal_padding = 5

    transparency = 6

    mouse_left_click = close_current
    mouse_right_click = close_all

    # Paths to dmenu and notification close actions
    dmenu = /usr/bin/dmenu
    browser = /usr/bin/google-chrome-stable


    font = Hack Nerd Fond Mono 10


[urgency_low]
    # If the notification urgency is low (default background)
    timeout = 3
    background = "#222222"
    foreground = "#888888"

