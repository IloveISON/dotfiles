[global]
    # Monitor to display notifications on
    monitor = 0

    # Follow focus. If set to mouse, notifications pop up at the mouse cursor.
    follow = mouse

    title = Dunst
    class = Dunst

    width = 300
    height = 160
    origin = top-left
    offset = 20x60
    scale = 0 
    notification_limit = 4

